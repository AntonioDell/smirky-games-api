{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "Deno debug",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "deno",
      "runtimeArgs": ["run", "--inspect", "-A", "--unstable", "server.ts"],
      "attachSimplePort": 9229
    },
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "Deno hot reload",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "deno",
      "runtimeArgs": ["run", "--watch", "-A", "--unstable", "server.ts"],
    }
  ]
}